<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="particle-system" package="com.starling.extensions.particlesystem" version="1.0.0" company="vroad" />
	<app main="Startup" file="particle-system" path="Export" />

	<window width="640" height="480" orientation="landscape" vsync="true" fps="60" hardware="true" allow-shaders="true" require-shaders="true" depth-buffer="false" stencil-buffer="true" background="0x222222" />
	<window stencil-buffer="false" if="android" />
	
	<source path="src" />
	<source path="../src" />
	
	<assets path="media" />

	<haxelib name="starling" />
	<haxelib name="openfl" />
	
	<haxedef name="dom" if="html5" />
    <haxedef name="starling_particle_parallelize" if="cs" unless="no_starling_particle_parallelize" />

	<android minimum-sdk-version="9" target-sdk-version="23" />
	
</project>
